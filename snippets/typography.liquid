{% style %}

  :root {
    --type-heading-scale: 1;
    --type-body-scale: 1;
    --line-height-scale: 1.5;

    --font-heading-weight: 700;
    --font-body-weight: 400;

    /* 
    // Heading sizes - mobile
    // h4â€”h6 remain the same size on both mobile & desktop 
    */

    --h00-size-mobile: 40px;
    --h0-size-mobile: 32px;
    --h1-size-mobile: 26px;
    --h2-size-mobile: 22px;
    --h3-size-mobile: 18px;

    /* // Heading sizes - desktop */

    --h00-size: 48px;
    --h0-size: 40px;
    --h1-size: 32px;
    --h2-size: 24px;
    --h3-size: 20px;
    --h4-size: 16px;
    --h5-size: 14px;
    --h6-size: 12px;

    --body-text: 16px;
    --body-text-s: 14px;
    --body-text-xs: 12px;

  }

{% endstyle %}
