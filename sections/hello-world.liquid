  </section>
  <section>
    <h2 class="h00 my-8">Colors</h2>

    <!-- Base Colors -->
    <div class="grid grid-cols-4 gap-4 md:grid-cols-6 lg:grid-cols-8">
      <div class="body-xsmall">
        <div class="bg-primary aspect-square border-2 border-black"></div>
        <div class="mt-2">{{ settings.primary_color }}</div>
        <div>// primary</div>
      </div>
      <div class="body-xsmall">
        <div class="bg-secondary aspect-square border-2 border-black"></div>
        <div class="mt-2">{{ settings.secondary_color }}</div>
        <div>// secondary</div>
      </div>
      <div class="body-xsmall">
        <div class="bg-tertiary aspect-square border-2 border-black"></div>
        <div class="mt-2">{{ settings.tertiary_color }}</div>
        <div>// tertiary</div>
      </div>
    </div>

    <!-- Accent Colors -->
    <div class="grid grid-cols-4 gap-4 md:grid-cols-6 lg:grid-cols-8 mt-8">
      <div class="body-xsmall">
        <div class="bg-accent-1 aspect-square border-2 border-black"></div>
        <div class="mt-2">{{ settings.accent_color_1 }}</div>
        <div>// accent_1</div>
      </div>
      <div class="body-xsmall">
        <div class="bg-accent-2 aspect-square border-2 border-black"></div>
        <div class="mt-2">{{ settings.accent_color_2 }}</div>
        <div>// accent_2</div>
      </div>
    </div>

    <!-- Button Colors -->
    <div class="grid grid-cols-4 gap-4 md:grid-cols-6 lg:grid-cols-8 mt-8">
      <div class="body-xsmall">
        <div class="bg-[var(--color-button-background)] aspect-square border-2 border-black"></div>
        <div class="mt-2">{{ settings.button_bg_color }}</div>
        <div>// button_bg</div>
      </div>
      <div class="body-xsmall">
        <div class="bg-[var(--color-button-foreground)] aspect-square border-2 border-black"></div>
        <div class="mt-2">{{ settings.button_text_color }}</div>
        <div>// button_label</div>
      </div>
    </div>
  </section>
  <section>
    <h2 class="h00 my-8">Buttons</h2>
    <div class="flex flex-wrap gap-4 items-center">
      <button class="button button--primary">Button</button>
      <button class="button button--primary" disabled>Disabled Button</button>
      <button class="button button--secondary">Button</button>
    </div>
    <div class="mt-4">
      <a class="text-link inline-block px-2" href="#">Link</a>
    </div>
  </section>
  <section>
    <h2 class="h00 my-8">Components</h2>
    <details class="group/details" open>
      <summary class="flex justify-between items-center">
        <div class="h4">FAQ</div>
        <div>
          <span class="font-bold group-open/details:hidden">+</span>
          <span class="font-bold hidden group-open/details:block">-</span>
        </div>
      </summary>
      <p class="mt-4">Lorem ipsum dolor sit amet consectetur adipisicing elit. Dignissimos culpa consectetur alias odit minima nisi natus pariatur vero, consequatur tempore error minus eum, labore nulla animi! Dolorem sit fuga ipsa.</p>
    </details>
    <details class="group/details mt-8">
      <summary class="flex justify-between items-center">
        <div class="h4">FAQ 2</div>
        <div>
          <span class="font-bold group-open/details:hidden">+</span>
          <span class="font-bold hidden group-open/details:block">-</span>
        </div>
      </summary>
      <p class="mt-4">Lorem ipsum dolor sit amet consectetur adipisicing elit. Dignissimos culpa consectetur alias odit minima nisi natus pariatur vero, consequatur tempore error minus eum, labore nulla animi! Dolorem sit fuga ipsa.</p>
    </details>
  </section>
  {% if section.settings.show_spotify_iframe %}
    <section class="border-t">
      <p class="font-normal underline underline-offset-[0.5rem] mb-8">Music I listened to while I was coding this ðŸŽµ :</p>
      {% render 'spotify' %}
    </section>
  {% endif %}
</div>

{% schema %}
{
  "name": "Hello World",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_spotify_iframe",
      "label": "Show Music Recommendation",
      "default": true
    }
  ],
  "presets": [
    {
      "name": "Hello World"
    }
  ]
}
{% endschema %}
